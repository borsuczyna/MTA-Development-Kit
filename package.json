{
    "name": "mta-development-kit",
    "displayName": "MTA Development Kit",
    "description": "Visual Studio Code extension for Multi Theft Auto",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.95.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./dist/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "exportsSidebar",
                    "title": "Resource exports",
                    "icon": "resources/sample-icon.svg"
                }
            ]
        },
        "views": {
            "exportsSidebar": [
                {
                    "id": "exportsView",
                    "name": "All exports"
                }
            ]
        },
        "menus": {
            "view/item/context": [
                {
                    "command": "extension.exportGoToDefinition",
                    "when": "viewItem == export",
                    "group": "navigation"
                }
            ]
        },
        "commands": [
            {
                "command": "extension.exportGoToDefinition",
                "title": "Go to definition",
                "category": "hidden"
            },
            {
                "command": "extension.printActiveScript",
                "title": "Print active script"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "20.x",
        "@types/vscode": "^1.95.0",
        "@types/xmldom": "^0.1.34",
        "@typescript-eslint/eslint-plugin": "^8.17.0",
        "@typescript-eslint/parser": "^8.17.0",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1",
        "eslint": "^9.16.0",
        "ts-loader": "^9.5.1",
        "typescript": "^5.7.2",
        "webpack": "^5.95.0",
        "webpack-cli": "^5.1.4"
    },
    "dependencies": {
        "@types/luaparse": "^0.2.12",
        "luaparse": "^0.3.1",
        "xmldom": "^0.6.0"
    }
}
